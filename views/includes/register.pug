.row.mt-5 
  .col-md-6.col-lg-5.m-auto
    .card.card-body
      h1.text-center.mb-3
        i.fas.fa-user-plus
        span  Register
      include messages.pug        
      form(action="/users/register" method="POST")
        .form-group
          input(
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value=typeof name !== 'undefined' ? name : ''
          )
        .form-group
          input(
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value=typeof email !== 'undefined' ? email : ''
          )
        .form-group
          input(
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value=typeof password !== 'undefined' ? password : ''
          )
        .form-group
          input(
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value=typeof password2 !== 'undefined' ? password2 : ''
          )
        button(type="submit" class="btn btn-primary btn-block") Register
      p.lead.mt-4 Have An Account? #[a(href="/users/login") Login]